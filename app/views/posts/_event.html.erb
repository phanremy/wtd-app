<%#= turbo_frame_tag dom_id(event) do %>
  <%= render 'shared/post_card', link: event['fields']['url'],
                                 image: event['fields']['cover_url'],
                                 title: event['fields']['title'],
                                 body: event['fields']['lead_text'],
                                 address: [event['fields']['address_street'], event['fields']['address_zipcode'], event['fields']['address_city']].join(', '),
                                 starting_date: event['fields']['date_start'],
                                 ending_date: event['fields']['date_end'],
                                 date_description: event['fields']['date_description'],
                                 description: event['fields']['description'],
                                 tags: parse_tags(event['fields']['tags']) %>
<%# end %>
