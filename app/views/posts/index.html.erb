  <div class="w-full flex items-center justify-center py-6">
    <% if current_user %>
      <%= link_to "New Post", new_post_path, data: { turbo: true }, class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
      <%= link_to 'Log out', destroy_user_session_path, class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
    <% else %>
      <%= link_to root_path, class:'flex justify-center align-center', data: { "turbo-frame" => "_top" }  do %>
        <%= render 'shared/logo' %>
      <% end %>
    <% end %>
    <div class="absolute top-0 right-0">
      <%= link_to " https://docs.google.com/forms/d/e/1FAIpQLScpcU6ApCAKkMtxd4ld56lxZ-8MQsF4gimkCmMxEbFJIF2lhQ/viewform", target: '_blank', class:'', data: { "turbo-frame" => "_top" }  do %>
        <div class="flex text-xs justify-end align-center pr-2 pt-5">
          <%= render 'shared/google_form_logo' %>
        </div>
      <% end %>
    </div>
  </div>
<%= render 'shared/filters' %>

