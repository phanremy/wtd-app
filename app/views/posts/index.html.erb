<%= link_to "New Post", new_post_path, class: 'bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
<%= turbo_frame_tag :posts do %>
  <% if @posts.count.zero? %>
    <p>No Posts</p>
  <% else %>
    <%= render @posts %>
  <% end %>

  <% if @events.count.zero? %>
    <p>No Events</p>
  <% else %>
    <% @events.each do |event| %>
      <%= render 'posts/event', event: event %>
    <% end %>
  <% end %>
<% end %>
