<div class="flex items-center justify-center" data-controller="modal-open" data-action="click->modal-open#process">
  <div class="lg:flex sm:block rounded mb-2 w-full overflow-hidden">
    <img class="lg:w-1/2 hero-picture-height sm:w-full items-start" src="<%= image %>" alt="">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= title %></div>
      <div class="font-bold text-sm mb-2">
        <% if date_description.blank? %>
          <% if starting_date && ending_date %>
            Du <%= l(starting_date.to_datetime, locale: params[:locale]) %> au <%= l(ending_date.to_datetime, locale: params[:locale]) %>
          <% elsif starting_date %>
            A partir du <%= l(starting_date.to_datetime, locale: params[:locale]) %>
          <% elsif ending_date %>
            Avant le <%= l(ending_date.to_datetime, locale: params[:locale])  %>
          <% end %>
        <% else %>
          <%= sanitize date_description %>
        <% end %>
      </div>
      <div class="font-bold text-sm mb-2"><%= address %></div>
      <% if tags %>
        <div class="flex flex-wrap pt-2">
          <% tags.each do |tag| %>
            <span class="bg-gray-300 rounded-full px-2 py-1 mb-2 mr-2">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
      <p class="text-gray-700 text-base mb-2">
        <%= body %><br>
      </p>
      <% unless description.blank? %>
        <div class="font-bold text-sm mb-2">Description</div>
        <div class="text-gray-700 text-base mb-2">
          <%= sanitize description %>
        </div>
      <% end %>
      <div class="flex flex-wrap pt-5">
        <% if link %>
          <%= link_to link, target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' do %>
            <div class="flex">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <p class="ml-1">Lien de l'évènement</p>
            </div>
          <% end %>
        <% end %>
        <% if address %>
          <%= link_to "https://www.google.com/maps/place/Paris#{CGI::escape([' ', address].join)}", target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' do %>
            <div class="flex">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="ml-1">Google Maps</p>
            </div>
          <% end %>
        <% end %>
        <% if starting_date && ending_date %>
          <%= link_to create_calendar_google_link(title, starting_date, ending_date, body, address), target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' do %>
            <div class="flex">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="ml-1">Calendar Google (Browser)</p>
            </div>
          <% end %>
          <%= link_to create_google_calendar_link(title, starting_date, ending_date, body, address), target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' do %>
            <div class="flex">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="ml-1">Calendar Google (App)</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
