<% image_src = image || 'https://source.unsplash.com/random/300Ã—300' %>
<div class="flex items-center justify-center" data-controller="modal-open" data-action="click->modal-open#process">
  <div class="lg:flex sm:block rounded mb-2">
    <img class="lg:w-1/3 sm:w-full" src="<%= image_src %>" alt="" style="height: 100%; width:50%">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= title %></div>
      <div class="font-bold text-sm mb-2">
        <% if date_description.blank? %>
          Du <%= l(starting_date.to_datetime, locale: params[:locale]) %> au <%= l(ending_date.to_datetime, locale: params[:locale])  %>
        <% else %>
          <%= sanitize date_description %>
        <% end %>
      </div>
      <div class="font-bold text-sm mb-2"><%= address %></div>
      <% if tags %>
        <div class="flex flex-wrap pt-2">
          <% tags.each do |tag| %>
            <span class="bg-gray-300 rounded-full px-2 py-1 mb-2 mr-2">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
      <p class="text-gray-700 text-base mb-2">
        <%= body %><br>
      </p>
      <% unless description.blank? %>
        <div class="font-bold text-sm mb-2">Description</div>
        <div class="text-gray-700 text-base mb-2">
          <%= sanitize description %>
        </div>
      <% end %>
      <div class="flex flex-wrap pt-5">
        <%= link_to "Voir Lien", link, target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' %>
        <%= link_to "Localiser sur Google Maps", "https://www.google.com/maps/place/Paris#{CGI::escape([' ', address].join)}", target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' %>
        <%= link_to "Ajouter au Calendrier Google", "https://calendar.google.com/calendar/u/0/r/eventedit?text=#{CGI::escape(title)}&dates=#{CGI::escape((starting_date.to_datetime - 1.hour).strftime('%Y%m%dT%H%M%S'))}/#{CGI::escape((ending_date.to_datetime - 1.hour).strftime('%Y%m%dT%H%M%S'))}&ctz=#{Rails.application.config.time_zone}&details=#{CGI::escape(body)}&location=#{CGI::escape(address)}", target: '_blank', class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2 mb-2' %>
      </div>
    </div>
  </div>
</div>
