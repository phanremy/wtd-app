<% image_src = image || 'https://source.unsplash.com/random/300Ã—300' %>
<div class="w-full flex items-center justify-center">
  <div class="max-w-sm rounded overflow-hidden shadow-lg mb-2">
    <%= link_to link, target: '_blank' do %>
      <img class="w-full" src="<%= image_src %>" alt="">
    <% end %>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= title %></div>
      <p class="text-gray-700 text-base mb-2">
        <%= body %><br>
      </p>
      <div class="font-bold text-sm mb-2"><%= address %></div>
      <div class="font-bold text-sm mb-2">
        from <%= starting_date.to_date.strftime('%e %b %Y') %> to <%= ending_date.to_date.strftime('%e %b %Y') %>
      </div>
    </div>
  </div>
</div>
