<% image_src = image || 'https://source.unsplash.com/random/300Ã—300' %>
<div class="flex items-center justify-center" data-controller="modal-open">
  <div class="max-w-sm rounded overflow-hidden shadow-lg mb-2 mx-1 cursor-pointer" style="min-width: 384px!important" data-action="click->modal-open#process">
    <%#= link_to link, target: '_blank' do %>
    <div class="h-80 w-full" style="background-image:url(<%= image_src %>); background-position: center; background-repeat: no-repeat; background-size: cover;">
    </div>

    <%# end %>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2" style="height:56px !important" ><%= title %></div>
      <div class="font-bold text-sm mb-2">
        Du <%= l(starting_date.to_datetime, locale: params[:locale]) %> au <%= l(ending_date.to_datetime, locale: params[:locale])  %>
      </div>
      <p class="text-gray-700 text-base mb-2" style="height:72px !important">
        <%= body.truncate(100, separator: '.')%><br>
      </p>
      <div class="font-bold text-sm mb-2"><%= address %></div>
      <% if tags %>
        <div class="flex flex-wrap pt-2">
          <% tags.each do |tag| %>
            <span class="bg-gray-300 rounded-full px-2 py-1 mb-2 mr-2">
              <%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <template data-modal-open-target="modal">
    <%= render 'shared/modal', content: (render partial: 'shared/post_profile',
                                                         locals: { link: link,
                                                                   image: image,
                                                                   title: title,
                                                                   body: body,
                                                                   address: address,
                                                                   starting_date: starting_date,
                                                                   ending_date: ending_date,
                                                                   tags: tags
                                                                 }) %>
  </template>
</div>
